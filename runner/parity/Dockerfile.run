FROM centos

RUN yum -y install epel-release && \
  yum -y install \
   curl

RUN mkdir /parity
WORKDIR /parity

EXPOSE 30300 8540 8180 8080

COPY passwords /parity/
COPY initial-config.toml /parity/
COPY chain-spec.json /parity/
COPY out/parity /parity/
COPY non_stakeholder_setup.json /parity/
COPY stakeholder_setup.json /parity/

ENTRYPOINT ["./parity","--config"]
CMD config.toml
